                  <%}%>
                 <%if(field.isArrayOf){%>});<%}%>
              <% } else { %>
               // public "<%= field.name%>":I<%=field._class %>;
              <% } %>
              
           }
           <% }) %>
           
          return Promise.all(promArr).then(()=>{return true}) ;
        }).catch((err)=>{
          throw err ;
        })


