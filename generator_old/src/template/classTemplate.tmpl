           <% }else if( field._class == "object" ){ %>
           this["<%= field.name%>"] = obj["<%= field.name%>"] ;
          <% } else { %>
           this["<%= field.name%>"] = obj["<%= field.name%>"] ;
          <%}%>
        }
        <%} %>
    <% }) %>
  }
  

